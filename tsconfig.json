{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true, 
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es5","es6","es7","dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/test.ts",
    "**/*.spec.ts"
  ] 
}
